<div class="container-fluid">
  <div class="row">
    <div class="col-md-2 col-md-offset-5">
      <%= form_for(:user, url: sessions_path, html: { id: "session-create-form" }) do |f| %>
        <div class="form-group">
          <h1 class="text-center">
            Login
          </h1>
        </div>
        <div class="form-group">
          <h4> <%= f.label :email_field, "Email" %> </h4>
          <%= f.text_field :email, required: true, id: "user_email_field", class: 'form-control' %>

          <h4> <%= f.label :password_field, "Password" %> </h4>
          <%= f.password_field :password, required: true, id: "user_password_field", class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.submit "Sign In", class: "btn btn-success btn-lg" %>
        </div>
        <div class="form-group">
          <%= link_to "Sign Up", new_user_path, class: "btn btn-primary btn-lg"  %>
        </div>
      <% end %>
    </div>
  </div>
</div>
