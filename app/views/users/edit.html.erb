<div class="container-fluid">
  <div class="row">
    <div class="col-md-2 col-md-offset-5">
      <%= form_for(@user, url: user_path(@user), html: { id: "user-update-form" }) do |f| %>
        <h1 class="text-center">
          Edit Account
        </h1>

        <div class="form-group">
          <h4> <%= f.label :email_field, "Email" %> </h4>
          <%= f.text_field :email, required: true, id: "user_email_field", class: 'form-control' %>

          <h4> <%= f.label :first_name_field, "First Name" %> </h4>
          <%= f.text_field :first_name, required: true, id: "user_first_name_field", class: 'form-control' %>

          <h4> <%= f.label :last_name_field, "Last Name" %> </h4>
          <%= f.text_field :last_name, required: true, id: "user_last_name_field", class: 'form-control' %>

          <h4> <%= f.label :password_field, "Password" %> </h4>
          <%= f.password_field :password, required: true, id: "user_password_field", class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.submit "Update Account", class: "btn btn-success btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
