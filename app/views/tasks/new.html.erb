<div class="container-fluid">
  <div class="row">
    <div class="col-md-2 col-md-offset-5">
      <%= form_for(@task, url: tasks_path, method: :post, authenticity_token: true, html: { id: "topic-create-form" }) do |f| %>
        <h1 class="text-center">
          Create Task
        </h1>

        <div class="form-group">
          <h4> <%= f.label :text_field, "Description" %> </h4>
          <%= f.text_field :description, required: true, id: "task_description_field", class: 'form-control' %>
        </div>

        <%= f.hidden_field(:complete, value: false) %>

        <div class="form-group text-center">
          <%= f.submit "Create Task", class: "btn btn-success btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
