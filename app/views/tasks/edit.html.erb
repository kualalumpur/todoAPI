<div class="container-fluid">
  <div class="row">
    <div class="col-md-2 col-md-offset-5">
      <%= form_for(@task, url: topic_path(@task), html: { id: "task-update-form" }) do |f| %>
      <h1 class="text-center">
        Edit Task
      </h1>

      <div class="form-group">
        <h4> <%= f.label :text_field, "Description" %> </h4>
        <%= f.text_field :description, id: "topic_description_field", class: 'form-control' %>
      </div>

      <div class="form-group">
        <h4> <%= f.label :complete_field, "Complete" %> </h4>
        <%= f.text_field :complete, required: true, id: "task_complete_field", class: 'form-control' %>
      </div>

      <div class="form-group text-center">
        <%= f.submit "Update Task", class: "btn btn-success btn-lg" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
